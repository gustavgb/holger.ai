{
  "identifier": "default",
  "description": "Default capability for holger.ai",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-confirm",
    "core:webview:allow-set-webview-zoom",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    "fs:allow-unwatch",
    "fs:default",
    "fs:scope-config-recursive",
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}